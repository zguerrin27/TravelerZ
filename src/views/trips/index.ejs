<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <main class="container">
      <% include ../static/partials/navbar.ejs %>

      <header class="jumbotron my-4">
          <h1 class="display-3">All Trips</h1>
          <p class="lead">This is a collection of trips recently taken and shared with the world</p>
          <% if(!currentUser){ %>
          <a href="/users/sign_up" class="btn btn-primary btn-lg">Sign up</a>
          <% } %>
       </header>

      <!-- <h1>Trips</h1> -->

      <ul class="list-group">
        <% trips.forEach((trip) => { %>
          <li class="list-group-item">
            <a href="/trips/<%= trip.id %>"> <%= trip.title %> </a>
          </li>
        <% }) %>
      </ul>

      <hr>

      <a href="/trips/new" class="btn btn-success">New Trip</a>

    </main>
  </body>
</html>