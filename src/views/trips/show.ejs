<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
      <h1><%= trip.title %></h1>

      <p><%= trip.description %></p>

      <br>

      <h1>Comments - <a href="/trips/<%= trip.id %>/comments/new" class="btn btn-success btn-sm">New Comment</a></h1>

    
      <hr>

      <ul class="list-group">
        <% trip.comments.forEach((comment) => { %>
          <li class="list-group-item">
            <!-- <a href="/trips/<%= trip.id %>/comments/<%= comment.id %>"> <%= comment.body %> </a> -->
            <h6><%= comment.body %></h6>
            <form style="display:initial" action="/trips/<%= comment.tripId %>/comments/<%= comment.id %>/destroy" method="post">
              <button type="submit" class="btn btn-danger btn-sm">Delete Comment</button>
            </form>
          </li>
        <% }) %>
      </ul>

      <hr>

      <a href="/trips/<%= trip.id %>/edit" class="btn btn-warning">Edit Trip</a>

      <form style="display:initial" action="/trips/<%= trip.id %>/destroy" method="post">
        <button type="submit" class="btn btn-danger">Delete Trip</button>
      </form>
      
      <a href="/trips" class="btn btn-info">Back to All Trips</a>

    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>